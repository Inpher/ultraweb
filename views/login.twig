{% extends "base.twig" %}

{% block page_content%}

<div class="container" id="landingPage">

    <div class="row" style="margin-top:20px">
		<div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">

			<!-- Nav tabs -->
			<ul class="nav nav-tabs" role="tablist">
				<li role="presentation" class="active" ><a href="#loginTab" aria-controls="loginTab" role="tab" data-toggle="tab">Login</a></li>
				<li role="presentation" ><a href="#registerTab" id="registerTgl" aria-controls="profile" role="tab" data-toggle="tab">Register</a></li>
			</ul>

		  <!-- Tab panes -->
			<div class="tab-content">
				<div role="tabpanel" class="tab-pane active" id="loginTab">
					<form role="form" id="loginForm" data-toggle="validator">
						<fieldset>
						    <h2>Please Login</h2>
						    <hr class="colorgraph">
						    <div class="form-group has-feedback">
								<input type="text" name="usernameLogin" pattern="^[_A-z0-9]{1,}$" id="usernameLogin" required class="form-control input-lg" data-error="Please fill out your username" placeholder="Username">
								<div class="help-block with-errors"></div>
						    </div>
						    <div class="form-group has-feedback">
								<input type="password" name="passwordLogin" id="passwordLogin" required data-error="Please fill out your password" class="form-control input-lg" placeholder="Password">
								<div class="help-block with-errors"></div>
						    </div>
					  		<hr class="colorgraph">
					  		<div class="row">
					      		<div class="col-xs-12 col-sm-6 col-md-6 col-md-offset-6 col-sm-offset-6 col-xs-offset-0" >
						  			<button type="submit" id="login" class="btn btn-lg btn-success btn-block"> Login </button>
					      		</div>
					  		</div>
						</fieldset>
				    </form>
				</div>
			    <div role="tabpanel" class="tab-pane" id="registerTab">
					<form role="form" id="registerForm">
						<fieldset>
						    <h2>Please Register</h2>
						    <hr class="colorgraph">
						    <div class="form-group has-feedback">
								<input type="text" name="usernameRegister" id="usernameRegister" required class="form-control input-lg" data-error="Please fill out your username" placeholder="Username">
								<div class="help-block with-errors"></div>
						    </div>
						    <div class="form-group has-feedback">
								<input type="password" name="passwordRegister" data-minlength="8" pattern="(?=^.{8,}$)(?=.*\d)(?=.*[!@#$%^&*]+)(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" id="passwordRegister" required class="form-control input-lg" placeholder="Password" data-error="Please fill out your password" data-toggle="popover" title="The password length must be greater than or equal to 8.The password must contain one or more uppercase characters. The password must contain one or more lowercase characters. The password must contain one or more numeric values. The password must contain one or more special characters">
								<div class="help-block with-errors"></div>
						    </div>
						    <div class="form-group has-feedback">
								<input type="password" name="passwordConfirm" data-minlength="8" data-match="#passwordRegister" required class="form-control input-lg" placeholder="Confirm password" data-error="Please confirm your password" data-toggle="popover" title="The password length must be greater than or equal to 8.The password must contain one or more uppercase characters. The password must contain one or more lowercase characters. The password must contain one or more numeric values. The password must contain one or more special characters">
								<div class="help-block with-errors"></div>
						    </div>
					  		<hr class="colorgraph">
					  		<div class="row">
					      		<div class="col-xs-12 col-sm-6 col-md-6 col-md-offset-6 col-sm-offset-6 col-xs-offset-0" >
								  <button type="submit" id="register" class="btn btn-lg btn-success btn-block"> Register</a>
							    </div>
					  		</div>
						</fieldset>
				    </form>
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}
